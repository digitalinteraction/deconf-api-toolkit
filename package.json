{
  "name": "@openlab/deconf-api-toolkit",
  "description": "A library for running decentralised virtual conferences",
  "version": "4.5.0",
  "repository": "digitalinteraction/deconf-api-toolkit",
  "author": "robb-j",
  "license": "MIT",
  "main": "dist/module.js",
  "types": "dist/module.d.ts",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --runInBand",
    "coverage": "jest --runInBand --coverage",
    "build": "tsc",
    "lint": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run test -s && npm run build",
    "readme-toc": "md-toc -i",
    "express-example": "ts-node -r dotenv/config examples/express-app.ts",
    "release": "npm run preversion && standard-version",
    "release:beta": "npm run preversion && standard-version --prerelease=beta"
  },
  "dependencies": {
    "@openlab/deconf-shared": "^3.4.0",
    "@sendgrid/mail": "^7.4.6",
    "debug": "^4.3.2",
    "dot-prop": "^6.0.1",
    "email-regex": "^4.0.0",
    "got": "^11.8.2",
    "haversine-distance": "^1.2.1",
    "ics": "^2.31.0",
    "jsonwebtoken": "^8.5.1",
    "markdown-it": "^12.2.0",
    "minio": "^7.0.19",
    "ms": "^2.1.3",
    "mustache": "^4.2.0",
    "pg": "^8.7.1",
    "redis": "^3.1.2",
    "superstruct": "^0.15.0",
    "valid-env": "^1.1.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@robb_j/md-toc": "^0.3.1",
    "@types/debug": "^4.1.7",
    "@types/dedent": "^0.7.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/markdown-it": "^12.2.3",
    "@types/minio": "^7.0.10",
    "@types/ms": "^0.7.31",
    "@types/mustache": "^4.1.2",
    "@types/node": "^14.17.9",
    "@types/pg": "^7.14.11",
    "@types/redis": "^2.8.32",
    "dedent": "^0.7.0",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.0.5",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "yorkie": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "gitHooks": {
    "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
